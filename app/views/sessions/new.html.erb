<div class="login">
  <h1>ログインフォーム</h1>
</div>
    
<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session) do |f| %>

      <div class="mb-3">
        <div class ="form-color"><%= f.label :email, 'メールアドレス'  %></div>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <div class ="form-color"><%= f.label :password, 'パスワード'  %></div>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-success w-100' %>
    <% end %>

    <p style="text-align: center;">アカウントをお持ちでない方は <%= link_to 'こちらからアカウント登録', signup_path %></p>
  </div>
</div>
