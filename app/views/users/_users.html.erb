<% if users.any? %>
  <div class="container">
    <div class="row">
        <% users.each do |user| %>
          <div class="col-md-12">
            <div class="writer-profile-card">
              <div class="wp-left">
                <div class="wp-img"><img src="<%= gravatar_url(user) %>" alt="プロフィール画像"></div>
                <p class="wp-name"><%= link_to user.name , user_path(user), class: "text-decoration-none" %></p>
                <p class="wp-goal">結果目標／<%= user.goal %></p>
                <%= render 'relationships/follow_button', user: user %>
              </div>   
              <div class="wp-right">
                <div class="ul-center">
                  <ul>
                    <li><p class="wp-goal" style="text-align: center">プロフィール紹介</p></li>
                    <li><p class="wp-goal"><%= user.introduction %></p></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
      <% end %>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>        
<% end %>